---
const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="/azure-portfolio/tailwind.css" rel="stylesheet" />
  </head>
  <body class="bg-[#0a192f] text-[#ccd6f6] font-sans">
    <header class="fixed top-0 w-full bg-[#112240] p-4 z-50">
      <nav class="flex justify-center space-x-8">
        <a href="#home" class="hover:text-[#64ffda]">Home</a>
        <a href="#about" class="hover:text-[#64ffda]">About</a>
        <a href="#skills" class="hover:text-[#64ffda]">Skills</a>
        <a href="#portfolio" class="hover:text-[#64ffda]">Portfolio</a>
        <a href="#contact" class="hover:text-[#64ffda]">Contact</a>
      </nav>
    </header>

    <main class="pt-20">
      <slot />
    </main>

    <footer class="bg-[#112240] text-center p-4 mt-10">
      &copy; 2025 bogeonko Azure Portfolio
    </footer>
  </body>
</html>
